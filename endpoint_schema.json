{
  "type": "object",
  "additionalProperties": false,
  "required": ["path"],
  "properties": {
    "methods": {
      "type": "array",
      "default": ["GET"],
      "items": {
        "type": "string",
        "enum": ["GET", "POST", "PUT", "DELETE"]
      }
    },
    "path": {
      "type": "string",
      "pattern": "^\\/.*$"
    },
    "headers": {
      "type": "object"
    },
    "body": { "anyOf": [{"type": "string"}, {"type": "object"}] },
    "response": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "body": { "anyOf": [{"type": "string"}, {"type": "object"}] },
        "status": {
          "type": "string",
          "default": "200",
          "pattern": "^\\d\\d\\d$"
        },
        "headers": { "type": "object" }
      }
    }
  }
}
